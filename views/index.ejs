<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>To-Do List</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>ğŸ“ To-Do List</h1>
    
    <form action="/add" method="POST" class="form-add">
      <input type="text" name="task" placeholder="Enter a new task" required>
      <button type="submit">Add</button>
    </form>

    <ul>
      <% todos.forEach((task, index) => { %>
        <li class="task <%= task.done ? 'done' : '' %>">
          <form action="/toggle" method="POST" style="display:inline">
            <input type="hidden" name="index" value="<%= index %>">
            <button type="submit" class="tick-btn">âœ”</button>
          </form>
          <span><%= task.text %></span>
          <form action="/delete" method="POST" style="display:inline">
            <input type="hidden" name="index" value="<%= index %>">
            <button type="submit" class="del-btn">ğŸ—‘</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
